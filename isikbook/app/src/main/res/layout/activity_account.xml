<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:background="@android:color/white">

    <include layout="@layout/actionbar"
        android:id="@+id/actionbarAccount" />


    <ImageView
        android:id="@+id/pp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/actionbarAccount"
        android:layout_marginTop="20dp"
        android:src="@drawable/account"
        android:text="SeÃ§"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/settingsB"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/settings"
        /> <Button
    android:id="@+id/text8"
    android:background="@android:color/white"
    android:layout_below="@+id/pp"
    android:textColor="@color/colorIsik"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ayarlar"
    android:layout_toRightOf="@+id/settingsB"
    android:layout_marginTop="55dp"
    android:textSize="25sp"
    android:layout_marginStart="15dp"
    android:layout_toEndOf="@+id/settingsB" />

    <Button
        android:id="@+id/logoutB"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_below="@+id/settingsB"
        android:layout_marginStart="70dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/logout"
        /> <Button
    android:id="@+id/text9"
    android:layout_below="@+id/text8"
    android:background="@android:color/white"
    android:textColor="@color/colorIsik"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/logout"
    android:layout_toRightOf="@+id/logoutB"
    android:layout_marginTop="45dp"
    android:layout_marginStart="15dp"
    android:textSize="25sp"
    android:layout_toEndOf="@+id/logoutB" />
</RelativeLayout>